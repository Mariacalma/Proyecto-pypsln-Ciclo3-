@page
@model pypSln.App.frontend.Pages.veterinarioModel
@{

}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <a asp-page="./Registro" class ="btn-default">Volver</a>
            <div class="text-info"><h1>Crear Veterinario</h1></div>
            <form method="post">
                <table class="table" width="80%" height="80%">
                    <tr>
                        <div>
                            <td><label asp-for="veterinarios.Nombre" class="from-label"></label></td> 
                            <td><input asp-for="veterinarios.Nombre" class="from-control" />
                            <span asp-validation-for="veterinarios.Nombre" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="veterinarios.Apellidos" class="from-label"></label></td> 
                            <td><input asp-for="veterinarios.Apellidos" class="from-control" />
                            <span asp-validation-for="veterinarios.Apellidos" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="veterinarios.Telefono" class="from-label"></label></td>
                            <td><input asp-for="veterinarios.Telefono" class="from-control" />
                            <span asp-validation-for="veterinarios.Telefono" class="text-danger"></span></td>
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="veterinarios.Email" class="from-label"></label></td>
                            <td><input asp-for="veterinarios.Email" class="from-control" />
                            <span asp-validation-for="veterinarios.Email" class="text-danger"></span></td>
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td> <label asp-for="veterinarios.Direccion" class="from-label"></label></td> 
                            <td><input asp-for="veterinarios.Direccion" class="from-control" />
                            <span asp-validation-for="veterinarios.Direccion" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                    
                    <tr>
                        <div calss="mb-3">
                            <td> <label asp-for="veterinarios.TarjetaProfesional" class="from-label"></label></td> 
                            <td><input asp-for="veterinarios.TarjetaProfesional" class="from-control" />
                            <span asp-validation-for="veterinarios.TarjetaProfesional" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                </table>
            <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
        </div>
    </div>
</div>
