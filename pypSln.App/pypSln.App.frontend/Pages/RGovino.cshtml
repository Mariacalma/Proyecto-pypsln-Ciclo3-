@page
@model pypSln.App.frontend.Pages.ovinoModel
@{

}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <a asp-page="./Registro" class ="btn-default">Volver</a>
            <div class="text-info"><h1>Crear Ovino</h1></div>
            <form method="post">
                <table class="table" width="80%" height="80%">

                    
                    <tr>
                        <div>
                            <td><label asp-for="ovinos.Nombre" class="from-label"></label></td> 
                            <td><input asp-for="ovinos.Nombre" class="from-control" />
                            <span asp-validation-for="ovinos.Nombre" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="ovinos.color" class="from-label"></label></td> 
                            <td><input asp-for="ovinos.color" class="from-control" />
                            <span asp-validation-for="ovinos.color" class="text-danger"></span></td> 
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="ovinos.raza" class="from-label"></label></td>
                            <td><input asp-for="ovinos.raza" class="from-control" />
                            <span asp-validation-for="ovinos.raza" class="text-danger"></span></td>
                        </div>
                    </tr>
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="ovinos.sexo" class="from-label"></label></td>
                            <td><input asp-for="ovinos.sexo" class="from-control" />
                            <span asp-validation-for="ovinos.sexo" class="text-danger"></span></td>
                        </div>
                    </tr>
                    
                    
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="ovinos.Id_Propietario" class="from-label"></label></td>
                            <td><input asp-for="ovinos.Id_Propietario" class="from-control" />
                            <span asp-validation-for="ovinos.Id_Propietario" class="text-danger"></span></td>
                        </div>
                    </tr>
                    
                </table>
            <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
        </div>
    </div>
</div>
