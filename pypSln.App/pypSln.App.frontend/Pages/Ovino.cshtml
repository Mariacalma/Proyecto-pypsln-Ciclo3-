@page
@model pypSln.App.frontend.Pages.ListaOvinoModel
@{
}
<a asp-page="./Ovino" class ="btn-default">Volver</a>
<div class="text-center"><h1>Listado de Ovinos</h1></div>

<table class="table" width="80%" height="80%">
    <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var o in Model.ovino)
    {
            <tr>
                <td>@o.Id</td>
                <td>@o.Nombre</td>
                <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-Idovino="@o.Id">Detalles
                    <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>
                </a>
                </td>

                <td><div class="btn-group pl-5 pr-5" role="group" aria-label="Basic mixed styles example">
                    <a class="btn btn-warning d-inline" asp-area="" asp-page="./Ovino_Editar" asp-route-Idovino="@o.Id"><i class="fas fa-edit" ></i> Editar</a>
                    <a class="btn btn-danger d-inline" asp-area="" asp-page="./Eliminar" asp-route-Idovino="@o.Id"><i class="fas fa-trash-alt"></i> Eliminar</a> 
                </div></td>

            </tr>
    }
</table>
